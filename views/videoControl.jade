- var defaultWidth = 640
- var defaultHeight = 480

.row
    video.well(id='video' width=defaultWidth height=defaultHeight autoplay)
.row
    input#width(type='number' placeholder='Ширина видео' max='2048' min='64' value=defaultWidth disabled='true')
    input#height(type='number' placeholder='Высота видео' max='2048' min='64' value=defaultHeight disabled='true')
    input#apply(type='button' value='Apply' disabled='true')
